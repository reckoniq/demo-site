---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
    }}
  >
    <Fragment slot="title">
      Elevate your online presence with our <br />
      <span class="text-accent dark:text-white highlight"> Beautiful Website Templates</span>
    </Fragment>

    <Fragment slot="subtitle">
      At AstroWind, we're dedicated to creating exceptional website templates that empower businesses and individuals to
      establish a strong online presence. Our commitment to quality and innovation drives everything we do.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about us"
    stats={[
      { title: 'Global Offices', amount: '4' },
      { title: 'Team Members', amount: '248' },
      { title: 'Premium Templates', amount: '12' },
      { title: 'Industry Awards', amount: '24' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our templates"
    subtitle="Etiam scelerisque, enim eget vestibulum luctus, nibh mauris blandit nulla, nec vestibulum risus justo ut enim. Praesent lacinia diam et ante imperdiet euismod."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Business Templates',
        description:
          'Professional templates designed for modern businesses, featuring clean layouts, responsive design, and seamless integration with popular business tools.',
        icon: 'tabler:template',
      },
      {
        title: 'Creative Portfolio',
        description:
          'Showcase your creative work with our portfolio templates, offering dynamic galleries, smooth animations, and customizable project presentations.',
        icon: 'tabler:template',
      },
      {
        title: 'Marketing Landing Pages',
        description:
          'Convert visitors into customers with our high-converting landing page templates, optimized for engagement and featuring A/B tested layouts.',
        icon: 'tabler:template',
      },
      {
        title: 'E-commerce Solutions',
        description:
          'Launch your online store with our e-commerce templates, featuring secure checkout, inventory management, and mobile-first shopping experiences.',
        icon: 'tabler:template',
      },
      {
        title: 'Blog Platforms',
        description:
          'Share your story with our blog templates, designed for readability and engagement, with built-in SEO optimization and social sharing.',
        icon: 'tabler:template',
      },
      {
        title: 'Corporate Websites',
        description:
          'Establish your professional brand with our corporate templates, featuring integrated CMS, team profiles, and comprehensive company information sections.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'E-commerce',
        description:
          'Our e-commerce templates streamline online selling with intuitive product management, secure payment gateways, and optimized checkout processes.',
        icon: 'tabler:template',
      },
      {
        title: 'Blog',
        description:
          'Create engaging content with our blog templates featuring customizable layouts, category management, and built-in commenting systems.',
        icon: 'tabler:template',
      },
      {
        title: 'Business',
        description:
          'Professional business templates designed to showcase your services, team, and company achievements with a polished, corporate aesthetic.',
        icon: 'tabler:template',
      },
      {
        title: 'Branding',
        description:
          'Maintain consistent brand identity across all platforms with our comprehensive branding templates and style guide frameworks.',
        icon: 'tabler:template',
      },
      {
        title: 'Medical',
        description:
          'Specialized templates for healthcare providers featuring appointment scheduling, patient portals, and HIPAA-compliant design considerations.',
        icon: 'tabler:template',
      },
      {
        title: 'Fashion Design',
        description:
          'Showcase your fashion collections with our visually stunning templates, including lookbook layouts and seasonal campaign designs.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our values"
    subtitle="Our core values guide everything we do, from template design to customer support. We believe in creating products that make a real difference in how businesses present themselves online."
    items={[
      {
        title: 'Customer-centric approach',
        description:
          'We prioritize our customers needs in every design decision, ensuring our templates are intuitive, functional, and solve real business challenges.',
      },
      {
        title: 'Constant Improvement',
        description:
          'We continuously update our templates with the latest web technologies and design trends, ensuring our customers stay ahead of the curve.',
      },
      {
        title: 'Ethical Practices',
        description:
          'We maintain transparency in our pricing and licensing, while ensuring our templates meet accessibility standards and web best practices.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Achievements"
    subtitle="Our journey in creating exceptional website templates has been marked by significant milestones and recognition from the web development community."
    isReversed={true}
    callToAction={{
      text: 'See more',
      href: '/',
    }}
    items={[
      {
        title: 'Global reach',
        description:
          'Our templates are used by businesses in over 100 countries, powering websites across diverse industries and markets.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive customer feedback',
        description:
          'Maintaining a 4.9/5 satisfaction rating with over 10,000 customer reviews, reflecting our commitment to quality and support.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Industry recognition',
        description:
          'Recipient of multiple web design awards and featured in leading tech publications for our innovative template designs.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our locations"
    tagline="Find us"
    columns={4}
    items={[
      {
        title: 'United States',
        description: '1234 Innovation Drive, San Francisco, CA 94105',
      },
      {
        title: 'Europe',
        description: '15 Tech Plaza, Madrid, Spain 28001',
      },
      {
        title: 'Asia Pacific',
        description: '88 Digital Avenue, Sydney, Australia 2000',
      },
      {
        title: 'Latin America',
        description: '567 Creative District, SÃ£o Paulo, Brazil 01310',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Technical Support"
    tagline="Contact us"
    columns={2}
    items={[
      {
        title: 'Live Chat Support',
        description: 'Available 24/7 for immediate assistance with template customization and technical issues',
      },
      {
        title: 'Documentation',
        description: 'Comprehensive guides and API documentation for seamless template implementation',
      },
    ]}
  />
</Layout>
